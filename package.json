{
  "name": "ticket-tracker-monorepo",
  "version": "1.0.0",
  "description": "Full-stack ticket tracker application with a React frontend and Node.js backend.",
  "private": true,
  "scripts": {
    "install:backend": "npm install --prefix backend",
    "install": "npm run install:backend && npm install",
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend": "npx vite --port 3000",
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "start": "concurrently \"npm:start --prefix backend\" \"npm:dev:frontend\"",
    "build": "npx vite build"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.35",
    "serve": "^14.2.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
